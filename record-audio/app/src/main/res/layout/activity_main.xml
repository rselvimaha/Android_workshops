<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/start_record_btn"
        android:layout_width="170dp"
        android:layout_height="135dp"
        android:background="@color/green"
        android:textColor="@color/white"
        android:text="@string/start_record_audio"
        android:textAllCaps="false"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/stop_record_btn"/>

    <Button
        android:id="@+id/stop_record_btn"
        android:layout_width="170dp"
        android:layout_height="135dp"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:text="@string/stop_record_audio"
        android:textAllCaps="false"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/start_record_btn"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>